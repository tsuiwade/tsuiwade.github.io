#footer
  position: relative
  background: $light-blue
  background-attachment: local
  background-position: bottom
  background-size: cover

  if hexo-config('footer_bg') != false
    &:before
      position: absolute
      width: 100%
      height: 100%
      background-color: alpha($dark-black, .5)
      content: ''

#footer-wrap
  position: relative
  padding: 0.4rem 0rem 0rem 1rem
  color: var(--light-grey)
  text-align: center

  a
    color: var(--light-grey)

    &:hover
      text-decoration: underline
  p
    margin: 0rem 0rem

  .footer-separator
    margin: 0 .8rem

  .icp-icon
    padding: 0 4px
    vertical-align: text-bottom
    max-height: 1.4em
    width auto
